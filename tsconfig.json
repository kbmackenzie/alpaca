{
  "compilerOptions": {
    "target": "es2016",                                
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
